﻿@using simiulationraul.Models
@model List<Trainer>
@{
    int count = 0;
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p>Trainers</p>
                <a asp-action="create" asp-controller="trainer" class="btn btn-success">Add trainer</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Trainer trainer in Model)
                            {
                                count++;

                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/images/@trainer.Image" />
                                    </td>
                                    <td>
                                        @trainer.Name
                                    </td>
                                    <td>
                                        @trainer.Title
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@trainer.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="detail" asp-route-id="@trainer.Id" class="btn btn-primary">Detail</a>
                                        <a asp-action="delete" asp-route-id="@trainer.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
